for i in range (5, 0, -1):
    print("*"*i)

for i in range (5, 0, -1):
    print(" " * i, "*"*(6 - i))

for i in range (1 , 6):
    print("*"*i)

for i in range (5, 0, -1):
    print(" "*(5 - i), "*" * i)

for i in range (1 , 6):
    print("* "*i)

for i in range (1, 7):
    print(" " * (7-i), " *" * i )
print(" " * 5, "|___|")